<div style="padding:90px">
<h1>Reader</h1>
<p>All Posts--></p>
<table class="table table-hover">
 <thead class="thead-dark">
<tr>
	<th>Title</th>
	<th>Description</th>
	<th>Action</th>
</tr>	
</thead>
<% @post.each do |post| %>
<tr>
	<td><%= post.title %></td>
	<td><%= post.description %></td>
	<td><%= link_to "Read More",reader_path(post.id)  %></td>
</tr>
<% end %>
</table>
</div>