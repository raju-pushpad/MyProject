<div style="padding:90px">
<div style="text-align:center">
Welcome Admin

<h3>All Post---></h3></div>
<table class="table table-hover">
 <thead class="thead-dark">
<tr>
	<th>Title</th>
	<th>Description</th>
	<th>Posted By</th>
	<th colspan="3">Action</th>
</tr>
</thead>
<% @post.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.description %></td>
		<td><%= post.user.name%></td>
		<td><%= link_to "edit", edit_admin_path(post.id) %></td>
		<td><%= link_to "delete", admin_path(post.id), method: :delete %></td>
		<td><%= link_to "verify", admin_verify_path(post.id), method: :get %></td>
	</tr>
<% end %>
</table>
</div>